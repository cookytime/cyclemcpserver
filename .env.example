# base44 API Configuration
BASE44_API_KEY=replace_with_base44_api_key
BASE44_API_URL=https://app.base44.com/api
BASE44_APP_ID=replace_with_base44_app_id

# PostgreSQL Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=choreography
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_CONNECT_TIMEOUT=5

# MCP Server Configuration
MCP_TRANSPORT=streamable-http
MCP_HOST=0.0.0.0
MCP_PORT=8000
MCP_MOUNT_PATH=/
MCP_SSE_PATH=/sse
MCP_MESSAGE_PATH=/messages/
MCP_HTTP_PATH=/mcp
MCP_LOG_LEVEL=INFO

# Optional MCP bearer auth
MCP_AUTH_BEARER_TOKEN=replace_with_long_random_secret
MCP_AUTH_SCOPES=mcp:access
MCP_AUTH_ISSUER_URL=http://127.0.0.1:8000
MCP_AUTH_RESOURCE_URL=http://127.0.0.1:8000
MCP_AUTH_CLIENT_ID=authorized-client

# Web API Configuration
WEBAPP_API_KEY=replace_with_webapp_api_key
MCP_SERVER_URL=http://127.0.0.1:8000/mcp
MCP_SERVER_BEARER_TOKEN=replace_with_long_random_secret

# OpenAI Configuration
OPENAI_API_KEY=replace_with_openai_api_key
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT_SECONDS=45

# Docker Compose host port overrides (optional)
MCP_HOST_PORT=8000
WEBAPI_HOST_PORT=8080
